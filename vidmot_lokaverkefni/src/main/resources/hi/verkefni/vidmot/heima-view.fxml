<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hi.verkefni.vidmot.HeimaController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <Label alignment="CENTER" prefHeight="50" prefWidth="230" style="-fx-border-color: black;" text="Logo">
        <font>
            <Font name="Impact" size="30" />
        </font>
    </Label>
    <Label text="Leikir">
        <font>
            <Font name="Impact" size="20" />
        </font>
    </Label>
    <Button onAction="#onKubburPressed" alignment="CENTER" prefHeight="230" prefWidth="230" style="-fx-border-color: black;" text="Mynd fyrir leik Kubbur">

    </Button>
    <Label alignment="CENTER" prefHeight="50" prefWidth="230" style="-fx-border-color: black;" text="Mynd fyrir annan leik coming soon">

    </Label>
    <Label text="Notandi">
        <font>
            <Font name="Impact" size="20" />
        </font>
    </Label>
    <HBox spacing="10" >
        <Button prefHeight="40" prefWidth="70" text="Mynd f. búð " maxWidth="70" maxHeight="40">
            <font>
                <Font name="Impact" size="10" />
            </font>
        </Button>
        <Button onAction="#onInnskraning" prefHeight="40" prefWidth="70" text="Innskráining " maxWidth="70" maxHeight="40">
            <font>
                <Font name="Impact" size="10" />
            </font>
        </Button>
        <Button onAction="#onNyskraning" prefHeight="40" prefWidth="70" text="Nýskráning " maxWidth="70" maxHeight="40">
            <font>
                <Font name="Impact" size="10" />
            </font>
        </Button>
    </HBox>
    <Label fx:id="fxUser"></Label>

</VBox>
